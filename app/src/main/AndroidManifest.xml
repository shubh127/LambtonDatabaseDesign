<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lamtondatabasedesign">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LamtonDatabaseDesign">
        <activity
            android:name=".activities.RetrieveDataActivity"
            android:exported="true"
            android:label="@string/retrieve_data_head"
            android:parentActivityName=".activities.MainActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.ReferenceInfoActivity"
            android:exported="true"
            android:label="@string/add_reservation_head"
            android:parentActivityName=".activities.PopulateDataActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.PassengerInfoActivity"
            android:exported="true"
            android:label="@string/add_passenger_head"
            android:parentActivityName=".activities.PopulateDataActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.TicketInfoActivity"
            android:exported="true"
            android:label="@string/add_ticket_head"
            android:parentActivityName=".activities.PopulateDataActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.FlightInfoActivity"
            android:exported="true"
            android:label="@string/add_flight_head"
            android:parentActivityName=".activities.PopulateDataActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.PopulateDataActivity"
            android:exported="true"
            android:label="@string/populate_data_head"
            android:parentActivityName=".activities.MainActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>